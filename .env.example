# Server
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Auth
# IMPORTANT: JWT_SECRET must be at least 10 characters long
# This is required - the app will crash without it
JWT_SECRET=change-this-to-a-secure-random-string-at-least-10-chars
JWT_EXPIRES_IN=7d

# Database (Prisma)
DATABASE_URL="file:./dev.db"

# Payments (UPI)
UPI_VPA=library@upi
UPI_PAYEE_NAME=E-Library

# Optional: Google login (requires configuration)
GOOGLE_CLIENT_ID=
